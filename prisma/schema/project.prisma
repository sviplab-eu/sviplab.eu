model Project {
  id                Int               @id @default(autoincrement())
  title             String?
  slug              String            @unique
  previewImageURL   String?
  headerDescription String?
  headerTitle       String?
  imageInHero       Boolean           @default(true)
  url               String?
  heroMediaUrl      String?
  images            ProjectImage[]
  services          ProjectServices[]
  metatitle         String?
  metadesc          String?
}

model ProjectImage {
  id        Int     @id @default(autoincrement())
  url       String
  alt       String
  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectServices {
  id        Int     @id @default(autoincrement())
  service   String
  projectId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}